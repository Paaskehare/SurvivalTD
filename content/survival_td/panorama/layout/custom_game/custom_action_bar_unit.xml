<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_action_bar.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/custom_action_bar_unit.js" />
	</scripts>
	<Panel class="UnitInfoContainer">
		<Panel id="UnitHealthBar">
			<Panel id="UnitHealthBarPercentage"/>
			<Label id="UnitHealthBarLabel" text="100 / 100"/>
		</Panel>
		<Panel id="UnitAttributes">
			<!-- Range, Movespeed, Attack damage, Armor, Attack Speed, -->
			<Panel id="UnitAttributesProperties">
				<Panel id="UnitAttributesLeft">
					<Panel class="UnitAttributeProperty">
						<Label class="UnitAttributeLabel" text="Damage" />
						<Label id="UnitAttributeDamage" class="UnitAttributeValue" text="500" />
					</Panel>
					<Panel class="UnitAttributeProperty">
						<Label class="UnitAttributeLabel" text="Move Speed" />
						<Label id="UnitAttributeMoveSpeed" class="UnitAttributeValue" text="500" />
					</Panel>
				</Panel>
				<Panel id="UnitAttributesRight">
					<Panel class="UnitAttributeProperty">
						<Label class="UnitAttributeLabel" text="Range" />
						<Label id="UnitAttributeRange" class="UnitAttributeValue" text="500" />
					</Panel>
					<Panel class="UnitAttributeProperty">
						<Label class="UnitAttributeLabel" text="Armor" />
						<Label id="UnitAttributeArmor" class="UnitAttributeValue" text="500" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="UnitAbilities"/>
	</Panel>
</root>
