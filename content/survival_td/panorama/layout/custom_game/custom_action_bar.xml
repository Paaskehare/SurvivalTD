<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/custom_action_bar.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/custom_extensions.js" />
		<include src="file://{resources}/scripts/custom_game/custom_gamestate.js" />
		<include src="file://{resources}/scripts/custom_game/custom_action_bar.js" />
	</scripts>
	<Panel class="ActionBar" hittest="false">
		<Panel id="ActionMinimap" hittest="false"/>
		<Panel id="ActionBarContainer" hittest="false">
			<Panel id="UnitPortrait">
				<Label id="UnitPortraitLabel" class="TitleFont" text="Builder" />
				<Image id="UnitPortraitImage" />
			</Panel>
			<Panel id="UnitInfo"/>
			<Panel id="GameInfo">
		    	<Panel class="StatusRow" id="GoldBar">
		        	<Image src="file://{images}/custom_game/gold_coins.png" />
		        	<Label class="Description" text="Gold"/>
		        	<Label id="PlayerGold" text="300" />
		    	</Panel>
		    	<Panel class="StatusRow" id="PlayerLivesBar">
		        	<Image src="file://{images}/custom_game/heart.png" />
		        	<Label class="Description" text="Lives" />
		        	<Label id="PlayerLives" text="1" />
		    	</Panel>
		    	<Panel class="StatusRow" id="TierLevelBar">
		        	<Image src="file://{images}/custom_game/tier_icon.png" />
		        	<Label class="Description" text="Tier" />
		        	<Label id="TierLevel" text="1" />
		    	</Panel>
			</Panel>
			<Panel id="BuildMenu" hittest="false"/>
		</Panel>
	</Panel>
</root>
